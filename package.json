{
  "name": "content-moderation",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server/main.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "dev:cli": "tsx watch src/cli/moderate.ts",
    "dev:server": "tsx watch src/server/main.ts",
    "cli": "npx tsx src/cli/moderate.ts"
  },
  "bin": {
    "moderate": "dist/cli/moderate.js"
  },
  "keywords": [
    "moderation",
    "llm",
    "gemini",
    "typescript"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "tsx": "^4.20.5"
  }
}
